@model IEnumerable<NLayerApp.WEB.Models.Parcel_SearchViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name_of_Receiver)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name_of_Sender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Current_State)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name_of_Receiver)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name_of_Sender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Current_State)
            </td>
            <td>
                @Html.ActionLink("Parcels", "Find parcel", new { id = item.Id })
            </td>
        </tr>
    }

</table>